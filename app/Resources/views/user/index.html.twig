{% extends 'base_panel.html.twig' %}

{% block body %}
    <h1>Lista użytkowników {{ city }}</h1>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Emailactivate</th>
                    <th>Activationtoken</th>
                    <th>Role</th>
                    <th>Cinema</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.name }}</td>
                    <td>{{ user.surname }}</td>
                    <td>{{ user.email }}</td>
                    <td style="word-wrap: break-word;min-width: 160px;max-width: 160px;">{{ user.password }}</td>
                    <td>{% if user.emailActivate %}Yes{% else %}No{% endif %}</td>
                    <td style="word-wrap: break-word;min-width: 160px;max-width: 160px;">{{ user.activationToken }}</td>
                    <td>{{ user.role }}</td>
                    <td>{{ user.cinema }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('user_show', { 'id': user.id }) }}">Pokaż</a>
                            </li>
                            <li>
                                <a href="{{ path('user_edit', { 'id': user.id }) }}">Edytuj</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
