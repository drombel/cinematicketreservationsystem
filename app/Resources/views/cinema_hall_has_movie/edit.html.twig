{% extends 'base_panel.html.twig' %}

{% block body %}
    <h1>Edycja sali kinowej z filmami</h1>
    {% if error is defined and error != "" %}
        <h3 class="text-white bg-danger p-2">{{ error }}</h3>
    {% endif %}

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input class="btn btn-success" type="submit" value="Edytuj" />
    {{ form_end(edit_form) }}

    <br><a class="btn btn-light" href="{{ path('cinema_hall_has_movie_index') }}">Powrót do listy</a><br><br>

    {{ form_start(delete_form) }}
        <input class="btn btn-danger" type="submit" value="Usuń">
    {{ form_end(delete_form) }}

{% endblock %}
