{% extends 'base_panel.html.twig' %}

{% block body %}
    <h1>Lista sal kinowych z filmami</h1>

    <a href="{{ path('cinema_hall_has_movie_new') }}">Dodaj salę z filmem</a><br><br>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Movieid</th>
                    <th>Cinemahallid</th>
                    <th>Timestart</th>
                    <th>Timeend</th>
                    <th>Timemoviestart</th>
                    <th>Timemovieend</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for cinema_hall_has_Movie in cinema_hall_has_Movies %}
                <tr>
                    <td>{{ cinema_hall_has_Movie.movieId }}</td>
                    <td>{{ cinema_hall_has_Movie.cinemaHallId }}</td>
                    <td>{% if cinema_hall_has_Movie.timeStart %}{{ cinema_hall_has_Movie.timeStart|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if cinema_hall_has_Movie.timeEnd %}{{ cinema_hall_has_Movie.timeEnd|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if cinema_hall_has_Movie.timeMovieStart %}{{ cinema_hall_has_Movie.timeMovieStart|date('H:i:s') }}{% endif %}</td>
                    <td>{% if cinema_hall_has_Movie.timeMovieEnd %}{{ cinema_hall_has_Movie.timeMovieEnd|date('H:i:s') }}{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('cinema_hall_has_movie_show', { 'id': cinema_hall_has_Movie.id }) }}">Pokaż</a>
                            </li>
                            <li>
                                <a href="{{ path('cinema_hall_has_movie_edit', { 'id': cinema_hall_has_Movie.id }) }}">Edytuj</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
