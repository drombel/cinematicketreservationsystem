{% extends 'base_panel.html.twig' %}

{% block body %}
    <h1>Lista biletów</h1>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Cinemahallhasmovieid</th>
                    <th>Seatid</th>
                    <th>Email</th>
                    <th>UserId</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for ticket in tickets %}
                <tr>
                    <td>{{ ticket.cinemaHallHasMovieId }}</td>
                    <td>{% if ticket.seatId %}{{ ticket.seatId|join(', ') }}{% endif %}</td>
                    <td>{{ ticket.email }}</td>
                    <td>{% if ticket.userId %}{{ ticket.userId.email }}{% endif %}</td>
                    <td>{{ ticket.status }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('ticket_show', { 'id': ticket.id }) }}">Pokaż</a>
                            </li>
                            <li>
                                <a href="{{ path('ticket_edit', { 'id': ticket.id }) }}">Edytuj</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
