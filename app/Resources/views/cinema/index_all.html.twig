{% extends 'base.html.twig' %}

{% block body %}
    <div class="bg-page-dark-2 pt-5 base_panel">
        <div class="container">
            <h1>Znajd≈∫ kino!</h1>
            <div class="row flex-wrap">
            {% for cinema in cinemas %}
                <div class="col-6 col-xl-3 col-lg-3 col-md-4">
