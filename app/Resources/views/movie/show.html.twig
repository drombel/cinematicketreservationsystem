{% extends 'base_panel.html.twig' %}

{% block body %}
    <h1>Film</h1>

    <table>
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ movie.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ movie.price }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td><a href="{{ asset(movie.poster) }}"><br><img src="{{ asset(movie.poster) }}" alt="{{ movie.poster }}" class="img-fluid"></a></td>
            </tr>
            <tr>
                <th>Scene</th>
                <td><a href="{{ asset(movie.scene) }}"><br><img src="{{ asset(movie.scene) }}" alt="{{ movie.scene }}"  class="img-fluid"></a></td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-light" href="{{ path('movie_index') }}">Powrót do listy</a>

    <a class="btn btn-success" href="{{ path('movie_edit', { 'id': movie.id }) }}">Edytuj</a>

    {{ form_start(delete_form) }}
        <br><input class="btn btn-danger" type="submit" value="Usuń">
    {{ form_end(delete_form) }}

{% endblock %}
