{% extends 'base.html.twig' %}

{% block body %}
    <div class="bg-page-dark-2 pt-5 base_panel">
        <div class="container">
            <h1>Film w {{ cinema.name }}!</h1>
            <div class="row flex-wrap py-4">
                {% for movie in movies %}
                    <div class="col-6 col-xl-3 col-lg-3 col-md-4">
                        {% include 'default/movie_preview.html.twig' with
                        {
                            'title':movie.title,
                            'categories':['category1','category2'],
                            'mark':4.5,'poster': '/'~movie.poster,
                            'link': path('movie_by_cinema', { 'movie_id': movie.id, 'cinema_id': cinema.id })
                        }
                        only %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
