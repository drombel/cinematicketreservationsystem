<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
            <a href="http://localhost:8080/cinematicketreservationsystem/web/app_dev.php" class="btn btn-danger">HOME</a>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ logout_path() }}" class="btn btn-danger">Wyloguj</a>
                <a href="{{ path('user_edit', { 'id': app.user.id }) }}" class="btn btn-danger">Ustawienia</a>
                {% if app.user.role == 'admin' %}
                <a href="{{ path('user_index') }}" class="btn btn-danger">UÅ¼ytkownicy</a>
                    {% endif %}
            {% else %}
                <a href="{{ path('login') }}" class="btn btn-danger">Logowanie</a>
                <a href="{{ path('user_new') }}" class="btn btn-danger">Rejestracja</a>
            {% endif %}
            {% block body %}{% endblock %}
            {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>
